{% extends 'base.html.twig' %}

{% block title %}Pokegame !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue dans Pokedex ✅</h1>
        {% if app.user  %}
            <ul>
                <li><a href="{{ path('user_show', {'id': app.user.id}) }}">Profil dresseur</a></li>
                <li><a href="{{ path('pokemon_index') }}">Vos pokemons</a></li>
                <li><a href="{{ path('pokemon_poke_a_vendre') }}"> Pokemon en vente</a></li>
                <li><a href="{{ path('chasse_new') }}">Capture des pokémons</a></li>
                <li><a href="{{ path('chasse_index') }}">Vos captures</a></li>
                <li><a href="/logout" > Se déconnecter </a></li>
            </ul>
        {% else %}
            <ul>
                <li ><a href="{{ path('app_register') }}" >S'inscrire </a></li>
                <li ><a href="{{ path('app_login') }}" >Se connecter</a></li>
            </ul>
        {% endif %}
    </div>
{% endblock %}
