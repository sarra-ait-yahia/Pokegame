{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="centre">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscrivez-vous</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username,{label:'Pseudo: '}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe: '
        }) }}
    {{ form_row(registrationForm.mail,{label:'Adresse mail: '}) }}
        {{ form_row(registrationForm.agreeTerms,{label: 'Accepter les termes'}) }}
    <button type="submit" class="btn">S'inscrire</button> <br>
   {{ form_end(registrationForm) }}
    <a href="{{ path('home') }}">Retour Ã  la page d'accueil</a>
</div>
{% endblock %}
